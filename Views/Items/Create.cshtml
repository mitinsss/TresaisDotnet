@model PraktiskaisDarbs3.Models.Item
@{
    ViewData["Title"] = "Pievienot preci";
    var cats = ViewBag.Categories as List<PraktiskaisDarbs3.Models.Category> ?? new();
}

<h2>Pievienot preci</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
}

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label">Nosaukums</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Daudzums</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Kategorija</label>
        <select asp-for="CategoryId" class="form-select">
            <option value="">-- izvēlies --</option>
            @foreach(var c in cats)
            {
                <option value="@c.Id">@c.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Pievienot</button>
    <a asp-action="Index" class="btn btn-secondary">Atpakaļ</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
