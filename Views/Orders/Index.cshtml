@model IEnumerable<PraktiskaisDarbs3.Models.Order>
@{
    ViewData["Title"] = "Pasūtījumi";
}

<h2>Pasūtījumi</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Pievienot pasūtījumu</a>
</p>

<table class="table table-striped">
    <thead><tr><th>Id</th><th>Preces</th><th>Datums</th><th></th></tr></thead>
    <tbody>
    @foreach(var o in Model)
    {
        <tr>
            <td>@o.Id</td>
            <td>
                <ul class="mb-0">
                    @foreach(var oi in o.OrderItems)
                    {
                        <li>@oi.Item?.Name (@oi.Item?.Category?.Name) - Daudzums: @oi.Amount</li>
                    }
                </ul>
            </td>
            <td>@o.CreatedAt.ToLocalTime().ToString("g")</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@o.Id">Rediģēt</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@o.Id">Dzēst</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
