@model IEnumerable<PraktiskaisDarbs3.Models.Category>
@{
    ViewData["Title"] = "Kategorijas";
}

<h2>Kategorijas</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Pievienot jaunu</a>
</p>

<table class="table table-striped">
    <thead><tr><th>Id</th><th>Nosaukums</th><th>Preču skaits</th><th></th></tr></thead>
    <tbody>
    @foreach(var c in Model)
    {
        <tr>
            <td>@c.Id</td>
            <td>@c.Name</td>
            <td>@(c.Items?.Count ?? 0)</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@c.Id">Rediģēt</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@c.Id">Dzēst</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
